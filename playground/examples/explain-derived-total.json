{
  "title": "Explain derived totals",
  "description": "Calculate an order total and include EXPLAIN(\"total\") to inspect how the value was produced.",
  "program": [
    "LET subtotal = input.unit_price * input.quantity;",
    "LET discount = input.discount ?? 0;",
    "LET total = subtotal - discount;",
    "",
    "OUTPUT {",
    "    order_id: input.order_id,",
    "    subtotal: subtotal,",
    "    discount: discount,",
    "    total: total,",
    "    explain_total: EXPLAIN(\"total\")",
    "}"
  ],
  "input": {
    "order_id": "A-1024",
    "unit_price": 35.0,
    "quantity": 3,
    "discount": 5.0
  },
  "trace": true
}